#%Module1.0###########################################################
proc moduleVersion { } {
        if { ! [regexp {[^/]*$} [module-info name] ver] } {
                puts stderr "Internal modulefile error"
        }
        return $ver
}

set ver        [moduleVersion]
set path       <%= @install_dir %>/parallel-$ver

proc ModulesHelp { } {
   puts stderr "This module adds GNU Parallel to various paths"
   puts stderr "See http://www.gnu.org/software/parallel/ for further details"
}

module-whatis   "Sets up GNU Parallel in your environment"

conflict openmpi

prepend-path PATH $path/bin
prepend-path MANPATH $path/share/man

if [ module-info mode load ] {
        puts stderr "GNU Parallel version $ver loaded"
}

if [ module-info mode switch2 ] {
        puts stderr "GNU Parallel version $ver loaded"
}

if [ module-info mode remove ] {
        puts stderr "GNU Parallel version $ver unloaded"
}
